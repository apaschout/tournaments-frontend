<ul class="w3-ul w3-card w3-hoverable w3-dark-gray w3-margin-top" style="width: 50%;margin-left:auto;margin-right:auto;">
    {{#each @players-list.items as |plr|}}
    <LinkTo @route="player" @model={{plr.id}} style="text-decoration: none;">
        <li class="w3-hover-gray">{{plr.label}}</li>
    </LinkTo>
    {{/each}}
</ul>